@model IEnumerable<SmartCut.Models.StockItem>

@{
    ViewData["Title"] = "Index";
}

<h1>المستودع</h1>

<p>
    <a asp-action="Create">إضافة مادة</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                نوع المادة
            </th>
            <th>
                الصنف
            </th>
            <th>
                الطول
            </th>
            <th>
                العرض
            </th>
            <th>
                القساوة
            </th>
            <th>
                الوزن كغ
            </th>
            <th>
                غراماج غ\سم²
            </th>
            <th>
                متوفر
            </th>
            <th>
                الشحنة
            </th>
            <th>
                ملاحظة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hardness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gramage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipmentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i></a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
