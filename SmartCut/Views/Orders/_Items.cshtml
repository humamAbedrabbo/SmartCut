@model IEnumerable<SmartCut.Models.StockItemViewModel>

<table class="table">
    <thead>
        <tr>
            
            <th>
                نوع المادة
            </th>
            <th>
                الصنف
            </th>
            <th>
                الطول
            </th>
            <th>
                العرض
            </th>
            <th>
               القساوة
            </th>
            <th>
                الوزن كغ
            </th>
            <th>
                غراماج
            </th>
            <th>
                متوفر
            </th>
            <th>
                الشحنة
            </th>
            <th>
                ملاحظة
            </th>
            <th>
                عدد القطع
            </th>
            <th>
                التشريك%
            </th>
            <th>
               إجمالي القطع
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthCM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidthCM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hardness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gramage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipmentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PiecesCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LossPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            
        </tr>
}
    </tbody>
</table>
